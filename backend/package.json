{
  "name": "crazy-bee-backend",
  "version": "1.0.0",
  "description": "The backend web application for \"Crazy Bee\" project",
  "main": "index.js",
  "scripts": {
    "start": "nodemon ./server.js",
    "test": "mocha tests/**/** --reporter spec",
    "test-with-coverage": "nyc --all --reporter=lcov --reporter=text mocha tests/**/** --reporter spec",
    "make-coverage-badge": "lcov-badge2 ./coverage/lcov.info -o ./coverage-badge.svg",
    "seed-nft-collections-data": "node seeders/nftCollections.js",
    "seed-users-data": "node seeders/users.js"
  },
  "nyc": {
    "include": [
      "lib",
      "models",
      "repos",
      "controllers",
      "routes"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xuqun123/crazy-bee-project"
  },
  "keywords": [
    "Crazy Bee",
    "Nodejs",
    "Express",
    "JS"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xuqun123/crazy-bee-project/issues"
  },
  "homepage": "https://github.com/xuqun123/crazy-bee-project#readme",
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "chai": "^4.3.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "lcov-badge2": "^1.0.3",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "mongodb": "^4.13.0",
    "mongoose": "^6.8.3",
    "mongoose-unique-validator": "^3.1.0",
    "morgan": "^1.10.0",
    "nyc": "^15.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "mongodb-memory-server": "^8.11.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.2",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3"
  }
}
